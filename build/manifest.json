{
  "manifest_version": 3,
  "name": "X.com UX Fixer",
  "version": "1.0.0",
  "description": "Transform X.com into a dense, efficient, text-based interface optimized for rapid content consumption",
  
  "permissions": [
    "activeTab"
  ],
  
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "css": ["content.css"],
      "js": ["debug.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["content.css", "debug.js", "content.js"],
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ]
    }
  ],
  
  "icons": {
    "48": "icon-48.svg",
    "96": "icon-96.svg"
  },
  
  "author": "UX Fixer Team",
  "homepage_url": "https://github.com/your-username/x-twitter-home"
} 